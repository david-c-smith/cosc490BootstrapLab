<%= form_for @todo, :html => { :class => "form-horizontal todo" } do |f| %>
    <% if todo.errors.any? %>
    <div id="error_explanation">
      <div class="panel-heading">
        <h3><%= pluralize(@to_do.errors.count, "error") %> prohibited this to_do from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @to_do.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>

    <div class="form-group">
      <div class="col-lg-10">
        <%= f.text_field :item, :class => 'form-control' %>
      </div>
      <%=f.error_span(:item) %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit "Create new item", :class => 'btn btn-success' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    todos_path, :class => 'btn btn-danger pull-right' %>
      </div>
    </div>
<% end %>