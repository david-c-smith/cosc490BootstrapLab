<% if notice %>
    <p id="notice"><%= notice %></p> <% end %>
<h1>Your Pragmatic Catalog</h1>
<% @products.each do |product| %>
    <div class="entry">
      <%= image_tag(product.image_url) %> <h3><%= product.title %></h3>
      <%= sanitize(product.description) %><div class="price_line">
      <span class="price"><%= sprintf(number_to_currency(product.price)) %></span>
    </div>
     <p>Stock in store:<%= (product.stock) %></p>
      <% if product.stock == 0 %>
          <div>Available online only</div>
      <% end %>
      <p>Stock online:<%= (product.stockOnline) %>
        <% if product.stockOnline == 0 %>
          <div>Available in store only</div>
    <% end %>
    </div>
<% end %>
